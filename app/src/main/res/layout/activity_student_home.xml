<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentHomeActivity">
<ImageView
    android:layout_width="250dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="90dp"
    android:src="@mipmap/tec_logo"/>
<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="APPLY FOR CONCESSION"
    android:layout_marginTop="200dp"
    android:background="#5352ed"
    android:textColor="#fff"
    android:id="@id/applyForConcessionButton"
    android:layout_centerHorizontal="true"/>
<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_centerHorizontal="true"
    android:id="@id/viewApplicationsButton"
    android:background="#2ed573"
    android:textColor="#fff"
    android:layout_below="@id/applyForConcessionButton"
    android:text="View Your Applications"/>
<Button
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="LOGOUT"
    android:layout_marginTop="20dp"
    android:background="#ff4757"
    android:textColor="#fff"
    android:layout_centerHorizontal="true"
    android:id="@id/logOutButton"
    android:layout_below="@id/viewApplicationsButton"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:layout_alignParentBottom="true"
    android:background="#000">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="(username)"
        android:id="@id/studentHomeNameHolder"
        android:layout_marginLeft="10dp"
        android:textSize="18dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:id="@id/studentHomeIdHolder"
        android:layout_marginRight="10dp"
        android:textSize="18dp"
        android:text="(TU ID)"
        android:textColor="#fff"/>
</RelativeLayout>
</RelativeLayout>